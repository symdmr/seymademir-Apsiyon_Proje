@model UserViewModel


@using (Html.BeginForm())
{
<div class="row">

    <div class="col-4">
        <div class="form-group">
            <label>TC No</label>
            @Html.TextBoxFor(x => x.NationalID)
        </div>
    </div>

    <div class="col-4">
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            @Html.TextBoxFor(x => x.UserName)
        </div>
    </div>

    <div class="col-4">
        <div class="form-group">
            <label>Kullanıcı Soyadı</label>
            @Html.TextBoxFor(x => x.UserSurname)
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            <label>Telefon Numarası</label>
            @Html.TextBoxFor(x => x.UserPhone)
        </div>
    </div>

    <div class="col-4">
        <div class="form-group">
            <label>E-posta</label>
            @Html.TextBoxFor(x => x.UserEMail)
        </div>
    </div>

    <div class="col-4">
        <div class="form-group">
            <label>Plaka</label>
            @Html.TextBoxFor(x => x.UserNumberPlate)
        </div>
    </div>

</div>
    <input type="hidden" value="1" name="UserId" />
    <div class="row">
        <div class="col-12">
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>
    </div>

}